<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WelcomeActivity"

        android:background="@drawable/welcome_bg">

    <ImageView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/welcome_logo"
            android:background="@drawable/welocme_logo_bg"
            android:id="@+id/imageView"
            android:layout_marginTop="@dimen/_180sdp"
            android:layout_marginLeft="@dimen/_50sdp"/>

    <RelativeLayout
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@+id/imageView"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_60sdp"
            android:background="@drawable/spinner_back">
        <TextView
android:visibility="gone"
                android:id="@+id/txt_select_lan"
                android:layout_width="@dimen/_170sdp"
                android:layout_height="@dimen/_35sdp"
                android:text="@string/select_language"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:drawablePadding="@dimen/_10sdp"
                />
        <ImageView
android:visibility="gone"
                android:id="@+id/img_select_lan"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_170sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center"
        android:src="@drawable/down_arrow"/>
        <Spinner
                android:overlapAnchor="false"

                android:id="@+id/languageSpinner_welcome"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_35sdp"
                android:text="@string/select_language"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
               />

    </RelativeLayout>
    <TextView
            android:visibility="gone"
            android:text="@string/password"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"/>


</RelativeLayout>